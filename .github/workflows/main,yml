name: Pulumi
on:
  - pull_request
jobs:
  preview:
    name: Preview
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
      - uses: actions/setup-node@v4
        with:
          node-version-file: package.json
      - run: node -v
      - run: npm i -g pnpm@10.15.1
      - run: pnpm install
      - run: pnpm build
      - run: pnpm test